@model UpdatedAttendanceTask.Models.Model

@{
    ViewData["Title"] = "Attendance Calculation";
}

<h2>Attendance Calculation</h2>

<div class="container">
    <div class="input-form">
        @using (Html.BeginForm("Create", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            <div class="form-group">
                <label for="prompt">Enter Prompt:</label>
                <textarea id="prompt" name="Prompt" class="form-control" rows="4" required>@(Model.Prompt ?? "")</textarea>
            </div>

            <div class="form-group mt-3">
                <label for="file">Upload File:</label>
                <input type="file" id="file" name="file" class="form-control-file" />
            </div>

            <div class="mt-3">
                <button type="submit" class="btn btn-primary">Submit</button>
            </div>
        }
    </div>

    @if (!string.IsNullOrEmpty(Model.Response))
    {
        @* <div class="output-section mt-4">
    <h3>Generated Response:</h3>
    <p class="generated-response">@Model.Response</p>*@

        <div>
            <h3>Download Response:</h3>
            <p><a href="@Url.Action("DownloadResponse", "Home")" class="btn btn-success">Download File</a></p>
        </div>
        @* </div>*@
    }
</div>